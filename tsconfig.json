{
  "compilerOptions": {
    "target": "ES6",                        
    "module": "CommonJS",                   
    "outDir": "./dist/cjs",               
    "declaration": true,                    
    "declarationDir": "./types",           
    "moduleResolution": "node",            
    "esModuleInterop": true,               
    "strict": true,                        
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "types"]
}
